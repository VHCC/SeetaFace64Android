<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
    </style>
    <style name="AppTheme.InfoLabel" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/info_text_label</item>
        <item name="android:textSize">5dp</item>
    </style>
    <style name="AppTheme.InfoContent" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/info_text_content</item>
        <item name="android:textSize">7dp</item>
    </style>
    <style name="AppTheme.TipContent" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/tip_color</item>
        <item name="android:textSize">70sp</item>
    </style>
    <style name="AppTheme.SettingLabel" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/tip_color</item>
        <item name="android:textSize">20dp</item>
    </style>
    <style name="AppTheme.SettingValue" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18dp</item>
    </style>
    <style name="Button_Radius_40">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/btn_radius_40</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_margin">15dp</item>
    </style>
</resources>
